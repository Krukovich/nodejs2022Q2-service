generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Users {
  id String @id @unique @default(uuid()) @map("user_id")
  login String @unique @db.VarChar(256)
  password String @db.VarChar(256)
  version Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Albums {
  id String @id @unique @default(uuid()) @map("album_id")
  name String @unique @db.VarChar(256)
  year Int
  artistId String? @unique @default(uuid()) @map("artist_id")

  @@map("albums")
}

model Tracks {
  id String @id @unique @default(uuid()) @map("track_id")
  name String @unique @db.VarChar(256)
  artistId String? @unique @default(uuid()) @map("artist_id")
  albumId String? @unique @default(uuid()) @map("album_id")
  duration Int

  @@map("tracks")
}

model Artists {
  id String @id @unique @default(uuid()) @map("artist_id")
  name String @unique @db.VarChar(256)
  grammy Boolean

  @@map("artists")
}

model FavoritesArtists {
  id String @id @unique @default(uuid())
  userId String @unique @map("user_id")
  artistId String @map("artist_id")

  @@map("favorites_artists")
}

model FavoritesAlbums {
  id String  @id @unique @default(uuid())
  userId String @unique @map("user_id")
  albumId String @map("album_id")

  @@map("favorites_albums")
}

model FavoritesTtacks {
  id String @id @unique @default(uuid())
  userId String @unique @map("user_id")
  trackId String @map("track_id")

  @@map("favorites_tracks")
}
